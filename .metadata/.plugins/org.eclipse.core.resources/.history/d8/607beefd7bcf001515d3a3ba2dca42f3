	public JPanelPassword(final JPanelPasswords jPanelPasswords, final Category category, final Site site) {
		initComponents();
		siteContainer = jPanelPasswords;
		this.category = category;
		this.site = site;
		jTextFieldUrl.setText(site.getUrl());
		jTextFieldUser.setText(site.getUsername());
		jPasswordField.setText(site.getPassword());
		jTextAreaOptionalInfo.setText(site.getDetails());
	}

	private boolean isNewSite() {
		return site.getName() == null;
	}

	public String getSiteName() {
		return site.getName();
	}

